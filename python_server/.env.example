# Configuraci√≥n del servidor Python

# Habilitar HTTPS (true/false)
USE_SSL=true

# Puerto del servidor Flask HTTPS
FLASK_PORT=5003

# Ruta al certificado SSL (puede ser absoluta o relativa)
# Para certificado wildcard: *.tudominio.com
SSL_CERT=cert.pem

# Ruta a la llave privada SSL
SSL_KEY=key.pem

# NOTA: El servidor de control TCP siempre corre en puerto 5002 (sin SSL)
